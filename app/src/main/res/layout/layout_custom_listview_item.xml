<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_height="wrap_content"
        android:id="@+id/securityNameTextView"
        android:textSize="14sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="120dp" />

    <TextView
        android:text="TextView"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:id="@+id/percentChangeTextView"

        android:gravity="end"
        android:textAlignment="textEnd"
        android:textSize="14sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/asktextView"
        android:layout_toEndOf="@+id/asktextView" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/asktextView"
        android:layout_below="@+id/securityNameTextView"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/background_light" />
</RelativeLayout>